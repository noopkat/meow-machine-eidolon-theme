{{!< default}}
<div role='banner' class="header_eidolon">
{{#if @blog.logo}}<a class="logo_eidolon" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{@blog.title}}" /></a>{{/if}}
<h1 class="blogtitle_eidolon">
<a title="{{@blog.title}}" href='{{@blog.url}}'>
{{{@blog.title}}}
</a>
</h1>
<h2 class="blogdescription_eidolon">
{{@blog.description}}
</h2>
</div>



<main class="main_eidolon" role="main">
{{#post}}





<article class="article_eidolon" role="article" itemscope itemtype="http://schema.org/Article">
<header class="postheader_eidolon">
<h1 class="singleposttitle_eidolon" itemprop="headline"><a href="{{{url}}}" rel="bookmark">{{title}}</a></h1>
{{#if tags}}
<div class="posttags_eidolon">
<span class="entypo-tag"></span>
<div class="text">{{tags separator=" | "}}</div>
</div>
{{/if}}
<span class="more_eidolon">by {{author.name}}</span>
<div class="dateholder_eidolon">
<span class="entypo-calendar"></span><time class="date_eidolon" datetime="{{date format="YYYY-MM-DD"}}" itemprop="datePublished">{{date format='DD MMM YYYY'}}</time>
</div>
</header>
<div class="postcontent_eidolon" itemprop="articleBody">
{{content}}
</div>



    <div class="sharepost_eidolon">
    <h4 class="share_eidolon">Share this post: &nbsp;</h4>
    <a class="share_eidolon icon-twitter" target="_blank" href="http://twitter.com/share?text={{title}}&url={{url absolute="true"}}"><span class="entypo-twitter"></span></a>
    <a class="share_eidolon icon-facebook" target="_blank" href="http://www.facebook.com/sharer.php?u={{url absolute="true"}}"><span class="entypo-facebook"></span></a>
    <a class="share_eidolon icon-gplus" target="_blank" href="https://plus.google.com/share?url={{url absolute="true"}}"><span class="entypo-googleplus">Google+</span></a>
    </div>
        {{#if author}}
        <footer class="postfooter_eidolon">
        <address itemscope itemtype="http://schema.org/Person">
        
		{{#if author.image}}
		<div class="authorimage_eidolon"><img src="{{author.image}}" itemprop="image" /></div>
        {{/if}}
		<div class="fleft">
			<h4 class="authorname_eidolon"><span itemprop="author">{{author.name}}</span></h4>
			{{#if author.website}}
			<div class="authorwebsite_eidolon"><a href="{{author.website}}" itemprop="url">{{author.website}}</a></div>
			{{/if}}
			<div class="authorbio_eidolon">
			<p>{{author.bio}}</p>
			</div>
		</div>
        </address>
        </footer>
        {{/if}}
</article>
{{/post}}

    <div id="disqus_thread"></div>
    <script type="text/javascript">
        /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
        var disqus_shortname = 'eidelon'; // required: replace example with your forum shortname

        /* * * DON'T EDIT BELOW THIS LINE * * */
        (function() {
            var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
            dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
            (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
        })();
    </script>
    <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
    <a href="http://disqus.com" class="dsq-brlink">comments powered by <span class="logo-disqus">Disqus</span></a>
    

{{#if pagination}}
<div class="pagination_eidolon">
{{{pagination}}}
</div>
{{/if}}
</main>
{{> footer}}